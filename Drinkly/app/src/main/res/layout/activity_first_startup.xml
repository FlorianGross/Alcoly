<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/normalBackground"
    android:orientation="vertical"
    tools:context=".FirstStartupActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="320dp"
        android:layout_height="200dp"
        android:layout_marginTop="60dp"
        android:src="@drawable/alcoly_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/alcoly_logo"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/genderText"
        android:layout_width="170dp"
        android:layout_height="30dp"
        android:layout_marginStart="35dp"
        android:fontFamily="@font/helvetica_neue_regular"
        android:text="Dein Geschlecht:"
        android:textColor="@color/MainOrange"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/felameImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/felameImage" />

    <ImageView
        android:id="@+id/maleImage"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginEnd="60dp"
        android:background="@mipmap/blackrectangle"
        android:src="@mipmap/male"
        app:layout_constraintBottom_toTopOf="@+id/ageInput"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <ImageView
        android:id="@+id/felameImage"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="10dp"
        android:background="@mipmap/orangerectangle"
        android:src="@mipmap/female"
        app:layout_constraintBottom_toBottomOf="@+id/maleImage"
        app:layout_constraintEnd_toStartOf="@+id/maleImage"
        app:layout_constraintStart_toEndOf="@+id/genderText"
        app:layout_constraintTop_toTopOf="@+id/maleImage" />

    <TextView
        android:id="@+id/ageText"
        android:layout_width="121dp"
        android:layout_height="30dp"
        android:layout_marginStart="35dp"
        android:fontFamily="@font/helvetica_neue_regular"
        android:text="Dein Alter:"
        android:textColor="@color/MainOrange"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/ageInput"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ageInput" />


    <EditText
        android:id="@+id/ageInput"
        android:layout_width="185dp"
        android:layout_height="wrap_content"
        android:autofillHints=""
        android:background="@mipmap/textinput"
        android:fontFamily="@font/helvetica_neue_regular"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/weightInput"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/ageText"
        app:layout_constraintTop_toBottomOf="@+id/maleImage" />

    <TextView
        android:id="@+id/weightText"
        android:layout_width="153dp"
        android:layout_height="30dp"
        android:layout_marginStart="35dp"
        android:fontFamily="@font/helvetica_neue_regular"
        android:inputType="number"
        android:text="Dein Gewicht:"
        android:textColor="@color/MainOrange"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/weightInput"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/weightInput" />

    <EditText
        android:id="@+id/weightInput"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:background="@mipmap/textinput"
        android:fontFamily="@font/helvetica_neue_regular"
        android:importantForAutofill="no"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/Datenschutz"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/weightText"
        app:layout_constraintTop_toBottomOf="@+id/ageInput" />

    <TextView
        android:id="@+id/Datenschutz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mit dem Klicken auf OK erklärst du dich mit unseren
Nutzungsbedingungen einverstanden"
        android:textAlignment="center"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/forwardButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/weightInput" />

    <Button
        android:id="@+id/skipButton"
        android:layout_width="162dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corner"
        android:backgroundTint="@color/cardview_light_background"
        android:text="Überspringen"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/forwardButton"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Datenschutz" />

    <Button
        android:id="@+id/forwardButton"
        android:layout_width="162dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corner"
        android:fontFamily="@font/helvetica_neue_regular"
        android:text="Ok"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintTop_toBottomOf="@id/Datenschutz"
        app:layout_constraintStart_toEndOf="@+id/skipButton" />
</androidx.constraintlayout.widget.ConstraintLayout>