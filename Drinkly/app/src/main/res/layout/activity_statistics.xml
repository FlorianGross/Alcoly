<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/normalBackground"
    tools:context=".Statistics">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="10dp"
        android:text="DEINE WERTE"
        android:textColor="@color/MainOrange"
        android:fontFamily="@font/helvetica_neue_regular"
        app:layout_constraintBottom_toTopOf="@+id/barChart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/barChart"
        android:layout_width="345dp"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        />

    <Button
        android:id="@+id/niedrigerWert"
        android:layout_width="111dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/helvetica_neue_regular"
        android:text="Niedriger Wert"
        android:textColor="#3B7FCE"
        android:textSize="12sp"
        android:background="none"
        app:layout_constraintEnd_toStartOf="@+id/mittlererWert"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/barChart" />

    <Button
        android:id="@+id/mittlererWert"
        android:layout_width="111dp"
        android:layout_height="wrap_content"
        android:text="Mittlerer Wert"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:background="none"
        android:fontFamily="@font/helvetica_neue_regular"
        app:layout_constraintEnd_toStartOf="@+id/hoherWert"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/niedrigerWert"
        app:layout_constraintTop_toBottomOf="@+id/barChart" />

    <Button
        android:id="@+id/hoherWert"
        android:layout_width="111dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/helvetica_neue_regular"
        android:text="HOHER WERT"
        android:background="none"
        android:textColor="@color/MainOrange"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/mittlererWert"
        app:layout_constraintTop_toBottomOf="@+id/barChart" />

    <fragment
        android:id="@+id/fragment"
        android:name="com.example.drinkly.fragments.niedrigerWert"
        android:layout_width="345dp"
        android:layout_height="525dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>