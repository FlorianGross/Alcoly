<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fmgross.alcoly" >

    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/alcoly"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/alcoly_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Drinkly" >
        <activity android:name=".Activity_MainPage" />
        <activity
            android:name=".old.Activity_Settings"
            android:label="@string/title_activity_settings"
            android:noHistory="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".old.Activity_Details"
            android:noHistory="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".old.Activity_Timeline"
            android:noHistory="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".old.Activity_Statistics"
            android:noHistory="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activity_Camera"
            android:noHistory="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".old.Activity_MainScreen"
            android:noHistory="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activity_FirstStartUp"
            android:noHistory="true"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:screenOrientation="portrait"
            android:noHistory="true"
            android:theme="@style/Base.Theme.AppCompat" />
        <activity
            android:name=".Activity_Main"
            android:noHistory="true"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>