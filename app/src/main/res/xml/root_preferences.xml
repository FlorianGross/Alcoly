<?xml version="1.0" encoding="utf-8" ?>
<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory app:title="Dark Mode">
        <CheckBoxPreference
            app:defaultValue="true"
            app:key="Night"
            app:summaryOff="Dark Mode ist deaktiviert"
            app:summaryOn="Dark Mode aktiviert"
            app:title="Dark Mode" />
    </PreferenceCategory>
    <PreferenceCategory app:title="Persönliche Daten">
        <DropDownPreference
            app:defaultValue="Männlich"
            app:title="Geschlecht"
            app:key="gender"
            app:summary="Dein Geschlecht"
            app:entries="@array/Gender"
            app:entryValues="@array/Gender"
            />
        <EditTextPreference
            app:defaultValue="20"
            app:key="age"
            app:summary="Dein Alter"
            app:title="Alter" />
        <EditTextPreference
            app:key="weight"
            app:summary="Dein Gewicht"
            app:title="Gewicht"
            app:defaultValue="80"/>
    </PreferenceCategory>
</PreferenceScreen>